<apex:page showHeader="false" sidebar="false"
	standardstylesheets="false">
	
	<html ng-app="MyApp">
	
<head>
<c:bootstrapandangularjs />
	<c:CricketHeader />
<c:Cricketangularapp />

</head>
<body>
	<div class="container" ng-controller="mycontroller">
	
	<apex:pagemessages />
		<div id='errors'>
		</div>
		<div class="success">
		
		</div>
		<form id="addproductform" method="post" class="form-horizontal">
			<div class="panel panel-primary" ng-repeat="player in players">
				<div class="panel-heading">
					<h3 class="panel-title">Add Cricket Player Information</h3>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label for="textinput"
									class="control-label col-md-4">Player FirstName <span style="color: red">*</span>
									
									</label>
								<div class="col-md-8">
									<input type="text" class="form-control" ng-class="{'has-error' : player.firstname == '' }" ng-model="player.firstname"
										placeholder="ENter name"  required="required" />
								</div>
							</div>
							<div class="form-group">
								<label for="textinput"
									class="control-label col-md-4">Player LastName<span style="color: red">*</span>
									</label>
								<div class="col-md-8">
									<input type="text" ng-class="{'has-error' : player.lastname == '' }" class="form-control" ng-model="player.lastname"
										placeholder="Enter name" required="required" />
								</div>
							</div>

							<div class="form-group">

								<label for="textinput"
									class="control-label  col-md-3  col-md-offset-1">DOB<span style="color: red">*</span> </label>
								<div class="col-md-8">
									<input type="date" class="form-control" value="2015-11-30" placeholder="ENter DOB" ng-model="player.dob"  required="required"/>
								</div>
							</div>
							<div class="form-group">
								<label for="textinput "
									class="control-label col-md-3 col-md-offset-1">City </label>
								<div class="col-md-8">
									<input type="text" class="form-control" ng-model="player.city"
										placeholder="Enter City" />
								</div>
							</div>

						</div>
						<div class="col-md-6">
							
							<div class="form-group">

								<label for="textinput" class="control-label col-md-5">Has
									played international ? </label>

								<div class="col-md-6 col-md-offset-1">
									<select class="form-control" ng-model="player.playedinternational" ng-init="player.playedinternational = 'no' ">
										<option value="yes">Yes</option>
										<option value="no">No</option>
									</select>
								</div> 
							</div>
							<div class="form-group" ng-class="{'hidden' : player.playedinternational == 'no' || angular.isUndefined(player.playedinternational) || player.playedinternational == ''}">
								<label for="textinput " class="control-label col-md-6"  >Last
									played Cricket Ground Name </label>
								<div class="col-md-6">
									<input type="text" class="form-control" ng-model="player.lastplayedstadiumname"
										placeholder="Enter Stadium name" />
								</div>
							</div>
							<div class="form-group">

								<label for="textinput"
									class="control-label col-md-2 col-md-offset-1">Speciality</label>

								<div class="col-md-6 col-md-offset-3">
									<select class="form-control" ng-model="player.speciality"  ng-options="s for s in specialityTypes" ng-init="player.speciality = 'Batting' ">
										
									</select>
								</div>
							</div>
						</div>



					</div>

					<div class="row">
						<div class="col-md-6">
							<div class="col-md-6">

								<input type="button" class="btn btn-default"
									value="Add Another Player" ng-click="addNewPlayer()" />
							</div>
							<div class="col-md-6">

								<input type="button" class="btn btn-danger"
									value="Delete this Player" ng-click="removePlayer($index)"/>

							</div>

						</div>
					</div>
				</div>
			</div>
								<input type="submit" class="btn btn-default pull-right" value="Submit" ng-click="submitTeam();"/>

		</form>
	</div>
</body>
	</html>
</apex:page>